{
	"name": "Angular2-Boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate for an application using Angular2, PugJS, SASS, Karma/Jasmine, TSLint/Codelyzer, and Webpack",
	"repository": {
		"type": "GIT",
		"url": "https://github.com/Plum-Crazy/Angular2-Boilerplate"
	},
	"license": "GPL-3.0",
	"scripts": {
		"start": "webpack-dev-server --inline --progress --port 3000",
		"test": "karma start",
		"lint": "tslint -c tslint.json \"src/app/**/*.ts\"",
		"pretest": "npm run lint",
		"build": "rimraf dist && webpack --config config/webpack.prod.js --progress --profile --bail",
		"postinstall": "typings install"
	},
	"dependencies": {
		"@angular/common": "2.0.0",
		"@angular/compiler": "2.0.0",
		"@angular/core": "2.0.0",
		"@angular/forms": "2.0.0",
		"@angular/http": "2.0.0",
		"@angular/platform-browser": "2.0.0",
		"@angular/platform-browser-dynamic": "2.0.0",
		"@angular/router": "3.0.0",
		"core-js": "^2.4.1",
		"rxjs": "5.0.0-beta.12",
		"zone.js": "^0.6.21"
	},
	"devDependencies": {
		"angular2-template-loader": "^0.4.0",
		"codelyzer": "0.0.26",
		"css-loader": "^0.23.1",
		"extract-text-webpack-plugin": "^1.0.1",
		"file-loader": "^0.8.5",
		"html-loader": "^0.4.3",
		"html-webpack-plugin": "^2.15.0",
		"jasmine-core": "^2.4.1",
		"karma": "^1.2.0",
		"karma-jasmine": "^1.0.2",
		"karma-phantomjs-launcher": "^1.0.2",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-webpack": "^1.8.0",
		"node-sass": "^3.10.0",
		"null-loader": "^0.1.1",
		"phantomjs-prebuilt": "^2.1.7",
		"pug": "^2.0.0-beta6",
		"pug-html-loader": "^1.0.8",
		"raw-loader": "^0.5.1",
		"reflect-metadata": "^0.1.8",
		"rimraf": "^2.5.2",
		"sass-loader": "^4.0.2",
		"style-loader": "^0.13.1",
		"ts-loader": "^0.8.1",
		"tslint": "3.5.0",
		"typescript": "2.0.3",
		"typings": "^1.3.2",
		"webpack": "^1.13.0",
		"webpack-dev-server": "^1.14.1",
		"webpack-merge": "^0.14.0"
	}
}
